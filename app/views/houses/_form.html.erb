

<%= form_with(model: @house, local: true) do |house| %>
  <div>
    <%= house.label "物件名" %><br>
    <%= house.text_field :name %>
  </div>
  <div>
    <%= house.label "賃料" %><br>
    <%= house.text_field :price %>円
  </div>
  <div>
    <%= house.label "住所" %><br>
    <%= house.text_field :address %>
  </div>
  <div>
    <%= house.label "築年数" %><br>
    <%= house.text_field :build %>年
  </div>
  <div>
    <%= house.label "備考" %><br>
    <%= house.text_area :remarks %>
  </div><br>
  <% count = 1 %>
  <%= house.fields_for :stations do |stations_form| %>
    <div>最寄り駅<%= count %></div>
    <div>
      <%= stations_form.label "路線名" %><br>
      <%= stations_form.text_field :train %>
    </div>
    <div>
      <%= stations_form.label "駅名" %><br>
      <%= stations_form.text_field :name %>
    </div>
    <div>
      <%= stations_form.label "徒歩分数" %><br>
      <%= stations_form.text_field :walk %>分
    </div><br>
    <% count += 1 %>
  <% end %>

  <%= house.submit "登録する" %><br>
  <%= link_to "戻る", houses_path %>
<% end %>